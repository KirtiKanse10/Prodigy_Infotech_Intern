  <div class="container">
    <h1>üå¶Ô∏è Weather App</h1>
    <input type="text" id="cityInput" placeholder="Enter city name" />
    <button onclick="getWeather()">Get Weather</button>

    <div class="weather-info" id="weatherInfo"></div>
  </div>

  <script>
    // Fake weather data for demo
    const fakeWeatherData = {
      mumbai: {
        city: "Mumbai",
        country: "India",
        temperature: 32,
        description: "Sunny",
        humidity: 58,
        wind: 3.4,
      },
      delhi: {
        city: "Delhi",
        country: "India",
        temperature: 35,
        description: "Partly Cloudy",
        humidity: 45,
        wind: 4.2,
      },
      london: {
        city: "London",
        country: "UK",
        temperature: 18,
        description: "Rainy",
        humidity: 72,
        wind: 5.1,
      },
    };

    function getWeather() {
      const cityInput = document.getElementById('cityInput').value.trim().toLowerCase();
      const weatherInfo = document.getElementById('weatherInfo');

      if (fakeWeatherData[cityInput]) {
        const data = fakeWeatherData[cityInput];
        weatherInfo.innerHTML = `
          <h2>${data.city}, ${data.country}</h2>
          <p>üå§Ô∏è ${data.description}</p>
          <p>üå°Ô∏è Temperature: ${data.temperature}¬∞C</p>
          <p>üíß Humidity: ${data.humidity}%</p>
          <p>üå¨Ô∏è Wind Speed: ${data.wind} m/s</p>
        `;
      } else {
        weatherInfo.innerHTML = `<p>Weather data not found for "${cityInput}". Try: Mumbai, Delhi, or London.</p>`;
      }
    }
  </script>
